---
import type { Vision } from "../interfaces/vision";
import fetchApi from "../lib/strapi";

const vision = await fetchApi<Vision>({
  endpoint: "vision", 
  wrappedByKey: "data"
});
---

<section class="py-8 w-full">
  <div class="flex flex-col items-center gap-4 mb-9">
    <h2 class="font-['Plus_Jakarta_Sans',Helvetica] font-bold text-[40px] text-[#111416] tracking-[-1.00px] leading-[45px] text-center">
      {vision.title}
    </h2>
    <p class="font-['Plus_Jakarta_Sans',Helvetica] font-medium italic text-[#111416] text-3xl text-center">
      “{vision.quote}”
    </p>
  </div>
</section>
