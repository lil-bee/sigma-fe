---
const { highlight } = Astro.props;

const imageUrl = highlight.heroImage.formats?.medium?.url ?? highlight.heroImage.url;
---

<a href={`/highlights/${highlight.slug}`} class="block border rounded-xl overflow-hidden shadow-sm hover:shadow-md transition">
  <img
    src={imageUrl}
    alt={highlight.heroImage.alternativeText ?? highlight.title}
    class="w-full h-48 object-cover"
  />
  <div class="p-4">
    <h2 class="text-xl font-semibold">{highlight.title}</h2>
    <p class="text-sm text-gray-500">{highlight.client} Â· {highlight.location}</p>
  </div>
</a>
